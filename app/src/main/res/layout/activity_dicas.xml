<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dicas">


    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Dicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="55sp"
            app:fontFamily="@font/anton"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView14"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/group2"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="62dp"
            android:id="@+id/textView14"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="16sp"
            android:text="Regue sua plantinha a cada dois ou três dias, mas fique atento ao nível de umidade apresentado na tela inicial!"
            app:fontFamily="@font/cabin"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView15" android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="36dp"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="61dp"
            android:id="@+id/textView15"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="16sp"
            android:text="Se for utilizar um vaso sem furos, é bom que sejam colocadas pedrinhas, antes da planta, para que ela não apodreça."
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.53"
            app:fontFamily="@font/cabin"
            android:layout_marginTop="20dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView16"/>
    <TextView
            android:layout_width="310dp"
            android:layout_height="86dp"
            android:id="@+id/textView16"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="16sp"
            android:text="A adubação pode ser feita com húmos de minhoca ou outros compostos orgânicos e fertilizantes podem ser colocados em quantidade pequena, uma vez por semana."
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.647"
            app:fontFamily="@font/cabin" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="52dp"
            android:id="@+id/textView20"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="16sp"
            android:text="Habilite as notificações para receber mensagens da sua plantinha."
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" app:fontFamily="@font/cabin"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.561"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/imageView20"
    />
    <ImageView
            android:layout_width="69dp"
            android:layout_height="68dp" app:srcCompat="@drawable/idea"
            android:id="@+id/imageView3"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.866"
    />
    <ImageView
            android:layout_width="953dp"
            android:layout_height="338dp" app:srcCompat="@drawable/fundo_fios"
            android:id="@+id/imageView20" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/group"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/group2"/>


</android.support.constraint.ConstraintLayout>